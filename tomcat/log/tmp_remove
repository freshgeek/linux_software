#!/bin/bash


####################################################################################################
#
#	脚本说明:	清除/tmp/tomcat_log_remove/目录下的日志文件
#		
#
####################################################################################################

####目标目录
target_dir=/tmp/tomcat_log_remove




rm -f $target_dir/*
echo `date "+%Y-%m-%d %H:%M:%S"`"清空 $target_dir 文件夹 "  
